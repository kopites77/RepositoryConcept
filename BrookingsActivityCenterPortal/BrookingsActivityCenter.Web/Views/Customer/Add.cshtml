@model BrookingsActivityCenter.Web.Models.AddCustomerViewModel

<h1>Add Customer</h1>

<form method="post">


    <div class="mt-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="CustomerName" />
    </div>

    <div>
        <label class="form-label">Email</label>
        <input type="email" class="form-control" asp-for="CustomerEmail" />
    </div>

    <div>
        <label class="form-label">Phone Number</label>
        <input type="number" class="form-control" asp-for="CustomerPhone" />
    </div>

    <div>
        <label class="form-label">Address</label>
        <input type="text" class="form-control" asp-for="Address" />
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>

</form>
